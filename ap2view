    <!-- Formats input with $ symbol, commas, and always 2 decimal places on load and blur; strips formatting before submit -->
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const inputs = document.querySelectorAll(".decimal-input");
        
        // Format on page load
        inputs.forEach(input => {
            formatCurrency(input);
            
            // Format on blur
            input.addEventListener("blur", function () {
            formatCurrency(input);
        });
        });
            
            // Strip formatting before submit
            document.querySelector('form').addEventListener('submit', function () {
            inputs.forEach(input => {
            input.value = input.value.replace(/[^0-9.]/g, ''); // Remove $ and commas
        });
        });
            
            // Formatting function
            function formatCurrency(input) {
            let rawValue = input.value.replace(/[^0-9.]/g, '').trim(); // Remove $ and commas
            let number = parseFloat(rawValue);
            if (!isNaN(number)) {
            input.value =  '$' + number.toLocaleString('en-US', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        });
    }
                              }
                              });
    </script>
    
