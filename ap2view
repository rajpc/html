    <div class="pdfButton" style="float: right">
        <apex:form>
            <!-- Show Save button only when form is not read-only -->
            <apex:outputPanel rendered="{!!isFormReadOnly}">
                <apex:commandButton value="Save" action="{!handleSave}"/> 
            </apex:outputPanel>
            
            <apex:outputPanel rendered="{!!isFormReadOnly}">
                <button onclick="handleClick()">Open PDF</button>
            </apex:outputPanel>
            
            
            <script>
            function handleClick() {
                var recId = '{!IF(ISBLANK(currentRecordId), '', currentRecordId)}';
                var pageName = 'ExistingBusinessPDF';
                
                if (recId) {
                    var url = '/apex/' + pageName + '?Id=' + recId;
                    window.open(url, '_blank');
                } else {
                    alert('Record ID is missing. Please save the form before generating the PDF.');
                }
            }
            </script>
        </apex:form>
    </div>
