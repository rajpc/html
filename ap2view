    <script>
    $(document).ready(function() {
        $(".open-toggle").click(function() {
            const label = $(this).text().trim();
            if (label.includes("Open Opportunities")) {
                $("#opportunityWrapper").slideToggle();
            } else if (label.includes("Potential Opportunities")) {
                $("#potentialWrapper").slideToggle();
            }
            $(this).find(".arrow").toggleClass("expanded");
        });
    });
    </script>
    
